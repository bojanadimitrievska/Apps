@model EShopAdminApp.Models.Order

<div class="container">

    @for (int i = 0; i < Model.Tickets.ToList().Count; i++)
    {
        var item = Model.Tickets[i].Ticket;
        if (i % 3 == 0)
        {
            @:<div class="row">
            }
            <div class="card" style="width: 18rem; margin-right:15px">
                <img src="@item.MovieBillboard" style="max-width:200px" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.MovieName</h5>
                    <p class="card-text">@item.MovieGenre</p>
                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>